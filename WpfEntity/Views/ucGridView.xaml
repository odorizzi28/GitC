<UserControl x:Class="WpfEntity.Views.ucGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfEntity.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Name="bntSalvar"
                Content="Salvar"
                Click="BntSalvar_Click"
                Margin="10,10,10,0" Height="65" VerticalAlignment="Top"
                />
        <DataGrid x:Name="dtGridView" 
                  Loaded="DtGridView_Loaded" 
                  AutoGenerateColumns="True" 
                  Height="355" Margin="10,85,10,0" 
                  VerticalAlignment="Top" CellEditEnding="DtGridView_CellEditEnding" />
        
    </Grid>
    
</UserControl>
